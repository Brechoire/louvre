{% extends 'base.html.twig' %}

{% block body %}
    <section>
        <div class="container">

            <form action="#" method="post">
                <div class="col-md-3">
                    <h2>Date de la visite</h2>
                    <div class="datepicker" id="datepicker" data-date="{{ "now"|date("d/m/Y") }}"></div>
                </div>

                <div class="col-md-6">
                    <h2>Durée de la visite & nombre de billets</h2>


                    <div class="radio">
                        <label>
                            <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked>
                            Billet pour la journée <i data-toggle="tooltip" data-placement="top" title="De 09h00 à 18h00" class="fa fa-question-circle"></i>
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
                            Billet pour la demi-journée  <i data-toggle="tooltip" data-placement="top" title="De 14h00 à 18h00" class="fa fa-question-circle"></i>
                        </label>
                    </div>

                </div>
            </form>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script>
        $('.datepicker').datepicker({
            language: 'fr',
            daysOfWeekDisabled: "0"
        });
    </script>
{% endblock %}